<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="13dp"
        android:layout_width="124dp"
        android:layout_height="124dp">
        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
            android:id="@+id/iv"
            test:radius1="5dp"
            android:src="@mipmap/zanwutupian"
            android:scaleType="centerCrop"

            android:layout_width="124dp"
            android:layout_height="124dp"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_xingxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_star1"
                android:src="@mipmap/pingxing"
                android:layout_marginRight="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <ImageView
                android:id="@+id/iv_star2"
                android:src="@mipmap/pingxing"
                android:layout_marginRight="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <ImageView
                android:id="@+id/iv_star3"
                android:src="@mipmap/pingxing"
                android:layout_marginRight="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <ImageView
                android:id="@+id/iv_star4"
                android:src="@mipmap/pingxing"
                android:layout_marginRight="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <ImageView
                android:id="@+id/iv_star5"
                android:src="@mipmap/pingxing"
                android:layout_marginRight="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:text="美丽的太阳岛.."
        android:textSize="14sp"
        android:textColor="@color/black_101010"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="3dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="@color/red_d84c37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_now_price"
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="89"
                android:textSize="16sp"
                android:textColor="@color/red_d84c37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView

                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_old_price"
                    android:textColor="@color/black_666666"
                    android:textSize="12sp"
                    android:text="¥ 109"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/black_666666"
                    android:layout_alignRight="@+id/tv_old_price"
                    android:layout_alignLeft="@+id/tv_old_price"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
