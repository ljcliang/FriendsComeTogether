<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="240px"
        android:layout_height="180px"
        android:background="@drawable/bg_f6f6f6_16px"
        android:orientation="vertical"
        >
        <LinearLayout
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:orientation="horizontal"
            android:layout_marginTop="10px"
            android:layout_marginBottom="5px"
            android:id="@+id/ll_add_friend"
            android:layout_width="match_parent"
            android:layout_height="75px">
            <ImageView
                android:src="@mipmap/jaihaoyou"
                android:layout_gravity="center_vertical"
                android:layout_width="45px"
                android:layout_height="45px" />
            <TextView
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical"
                android:textSize="32px"
                android:textColor="@color/black_101010"
                android:text="添加好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white_ffffff"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="5px"></LinearLayout>
        <LinearLayout
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:orientation="horizontal"
            android:id="@+id/ll_heimingdan"
            android:layout_width="match_parent"
            android:layout_height="75px">
            <ImageView
                android:src="@mipmap/heimingdan"
                android:layout_gravity="center_vertical"
                android:layout_width="45px"
                android:layout_height="45px" />
            <TextView
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical"
                android:textSize="32px"
                android:textColor="@color/black_101010"
                android:text="黑名单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
