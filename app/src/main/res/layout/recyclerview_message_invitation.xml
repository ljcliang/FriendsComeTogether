<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:background="@color/white_ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_marginLeft="32px"
            android:layout_marginTop="30px"
            android:scaleType="centerCrop"
            android:src="@mipmap/my_head"
            android:layout_width="90px"
            android:layout_height="90px" />

        <LinearLayout
            android:elevation="4px"
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="48px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:textColor="#9A9A9A"
                android:textSize="26px"
                android:text="2018-12-07 11：36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_marginTop="10px"
                android:layout_marginBottom="24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="完全搞不清楚状况的我"
                android:textColor="@color/black_333333"
                android:textSize="28px" />
            <LinearLayout
                android:id="@+id/ll_yaoqing"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/zanwutupian"
                        android:id="@+id/message_view_pic_iv"
                        android:layout_width="match_parent"
                        android:layout_height="454px"

                        android:scaleType="centerCrop" />
                    <RelativeLayout
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:paddingBottom="5px"
                        android:paddingTop="5px"
                        android:background="#80000000"
                        android:layout_alignBottom="@+id/message_view_pic_iv"
                        android:layout_marginTop="22px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:ellipsize="end"
                            android:lines="1"
                            android:layout_marginRight="20px"
                            android:layout_toLeftOf="@+id/ll_huodong_details"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:id="@+id/message_view_title_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="就让我们“偶然相聚”吧！"
                            android:textColor="@color/white_ffffff"
                            android:textSize="30px" />

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_huodong_details"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:text="活动详情"
                                android:textColor="#5566BE"
                                android:textSize="28px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8px"
                                android:src="@mipmap/right_blue"
                                android:layout_width="13px"
                                android:layout_height="22px" />

                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="5px"
                    android:id="@+id/rl_liuyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="28px"
                        android:id="@+id/tv_liuyan"
                        android:layout_marginTop="3px"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px">

                    <LinearLayout
                        android:paddingBottom="30px"
                        android:id="@+id/ll_yes"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/yaoqing_yes"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="28px"
                            android:text="接受邀请"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="30px"
                        android:id="@+id/ll_no"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/yaoqing_no"
                            android:layout_width="40px"
                            android:layout_height="40px" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8px"
                            android:textColor="@color/black_333333"
                            android:textSize="28px"
                            android:text="抱歉，下次吧！"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="20px"/>

</LinearLayout>