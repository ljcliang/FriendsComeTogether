<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:layout_marginTop="30px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:textStyle="bold"
        android:textColor="@color/black_333333"
        android:textSize="32px"
        android:text="多年的期待等待，只为放飞那一个的浪漫（2018 年清迈水灯节）"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_look_num"
        android:layout_gravity="right"
        android:layout_marginRight="32px"
        android:layout_marginTop="10px"
        android:textColor="#505050"
        android:textSize="24px"
        android:text="12345阅读了这篇友记"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/iv"
        android:layout_marginTop="24px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:scaleType="centerCrop"
        android:src="@mipmap/welcome"
        android:layout_width="match_parent"
        android:layout_height="300px" />

    <RelativeLayout
        android:layout_marginBottom="20px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_editor"
            android:gravity="center"
            android:background="@drawable/bg_red_26px"
            android:textColor="@color/white_ffffff"
            android:textSize="24px"
            android:text="继续编辑"
            android:layout_width="190px"
            android:layout_height="52px" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_delete"
            android:gravity="center"
            android:background="@drawable/bg_red_border_26px"
            android:textColor="#E51B23"
            android:textSize="24px"
            android:text="删除"
            android:layout_width="190px"
            android:layout_height="52px" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_team_chawen"
            android:gravity="center"
            android:background="@drawable/bg_red_border_26px"
            android:textColor="#d84c37"
            android:textSize="24px"
            android:text="插文管理"
            android:layout_width="190px"
            android:layout_height="52px" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

</LinearLayout>
