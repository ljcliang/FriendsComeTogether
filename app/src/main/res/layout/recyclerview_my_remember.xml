<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="8dp"
        android:background="@drawable/bg_white_10dp"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="34dp"
            android:layout_width="10dp"
            android:layout_height="85dp">
            <View
                android:id="@+id/view_zhupian"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_d84c37_10dp_right"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <View
                android:id="@+id/view_xuxie"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_ffac27_10dp_right"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/rl_left"
            android:layout_toLeftOf="@+id/rl_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="我是标题我是标题我题..."
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_title"
                android:textColor="@color/black_101010"
                android:textSize="16sp"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_fabu_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_xiangguanhuodong"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rl_canyuxiezuo"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="29dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_canyuxiezuo_num"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_team_chawen"
                    android:text="团友共有 0 人参与写作"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginRight="7dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_team_chawen"
                    android:layout_centerVertical="true"
                    android:text="管理"
                    android:textSize="12sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_66666_border_3dp"
                    android:layout_width="38dp"
                    android:layout_height="18dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_editor"
                    android:layout_centerVertical="true"
                    android:text="编辑 &amp; 续写"
                    android:textSize="12sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_66666_border_3dp"
                    android:layout_width="75dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_staus"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_66666_border_3dp"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_centerVertical="true"
                    android:text="删除"
                    android:textSize="12sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_66666_border_3dp"
                    android:layout_width="45dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="9dp"
            android:layout_width="118dp"
            android:layout_height="162dp">
            <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                android:id="@+id/iv"
                test:radius1="5dp"
                android:src="@mipmap/zanwutupian"
                android:scaleType="centerCrop"
                android:layout_width="118dp"
                android:layout_height="162dp"/>
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_black_5dp_transparent_point_41down"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_look_num"
                    android:src="@mipmap/eye_white"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:id="@+id/tv_look_num"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:text="1235"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white_ffffff"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
