<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".webpages.GuanLiGoodsWebActivity">
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        style="@style/rl_top_bar_dp">

        <RelativeLayout
            android:id="@+id/rl_return"
            style="@style/rl_return">

            <ImageView style="@style/iv_return_dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_white_18dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/rl_show_more"
            android:layout_toRightOf="@+id/rl_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_toLeftOf="@+id/ll_btn_serch"
                android:lines="1"
                android:id="@+id/edt_search"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="15dp"
                android:textSize="13sp"
                android:hint="搜索商品"
                android:background="@drawable/bg_search_edt"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_btn_serch"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/black_666666"
                    android:layout_width="1dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="搜 索"
                    android:textSize="12sp"
                    android:textColor="@color/black_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_share"
            android:layout_toLeftOf="@+id/rl_fabu"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/shop_share"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/rl_fabu"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/shop_good_add"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_show_more"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/gengduo_red"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>