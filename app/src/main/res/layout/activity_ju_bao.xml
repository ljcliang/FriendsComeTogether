<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.newpage.JuBaoActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:id="@+id/activity_details_of_friends_tv_top_title"
            style="@style/tv_top_title"
            android:text="举报" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView style="@style/iv_return" />

        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rl_top"
        android:id="@+id/rv_jubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/btn_jubao"
        android:textColor="@color/white_ffffff"
        android:textSize="30px"
        android:textStyle="bold"
        android:background="@color/red_d84c37"
        android:layout_alignParentBottom="true"
        android:text="举 报"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
