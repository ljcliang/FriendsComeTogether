<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="152px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon_user"
            android:src="@mipmap/my_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32px"
            android:layout_width="90px"
            android:layout_height="90px" />

        <RelativeLayout
            android:layout_toLeftOf="@+id/ll_right"
            android:layout_toRightOf="@+id/iv_icon_user"
            android:layout_alignTop="@+id/iv_icon_user"
            android:layout_width="match_parent"
            android:layout_height="90px">
            <TextView
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20px"
                android:id="@+id/tv_user_name"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:text="我是你们的学霸姐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20px"
                android:id="@+id/tv_user_fans_num"
                android:textColor="#5C5C5C"
                android:textSize="28px"
                android:text="粉丝数：1.7w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_right"
            android:background="@drawable/bg_d84c37_30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_guanzhu"
                android:layout_width="100px"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_guanzhu0"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/heart_white_border"
                    android:layout_width="38px"
                    android:layout_height="37px" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_guanzhu1"
                    android:layout_marginLeft="50px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/heart_white"
                    android:layout_width="38px"
                    android:layout_height="37px" />
            </RelativeLayout>

            <View
                android:layout_gravity="center_vertical"

                android:background="@color/white_ffffff"
                android:layout_width="2px"
                android:layout_height="38px"/>
            <TextView
                android:visibility="gone"
                android:background="@drawable/bg_red_10px"
                android:id="@+id/btn_guanhu"
                android:layout_marginRight="32px"
                android:layout_marginBottom="12px"
                android:layout_alignParentRight="true"
                android:textSize="28px"
                android:gravity="center"
                android:textColor="@color/white_ffffff"
                android:text="关注"
                android:layout_width="130px"
                android:layout_height="58px" />
            <RelativeLayout
                android:id="@+id/rl_yaoqing"
                android:padding="12px"
                android:layout_width="110px"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/btn_yaoqing"
                    android:layout_centerVertical="true"
                    android:textSize="28px"
                    android:gravity="center"
                    android:textColor="@color/white_ffffff"
                    android:text="邀请"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    
    <View
        android:background="@color/black_f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="20px"/>

</LinearLayout>
