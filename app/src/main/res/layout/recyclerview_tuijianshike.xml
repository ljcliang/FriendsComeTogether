<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_go_pf"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:layout_width="28dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:src="@mipmap/ic_twoline"
                android:layout_width="18dp"
                android:layout_height="14dp" />
            <TextView
                android:id="@+id/tv_pf_name"
                android:layout_marginBottom="4dp"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:textColor="@color/black_101010"
                android:textSize="14sp"
                android:ems="1"
                android:text=""
                android:ellipsize="end"
                android:maxLength="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="4dp"
                android:layout_gravity="right"
                android:src="@mipmap/go_round"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                    android:layout_marginRight="4dp"
                    test:radius1="5dp"
                    android:layout_weight="1"
                    android:id="@+id/iv_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zanwutupian" />
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/ll_right"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/rl_guanzhu"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_guanzhu"
                                android:layout_margin="4dp"
                                android:src="@mipmap/hert_0324_g"
                                android:layout_width="22dp"
                                android:layout_height="22dp" />
                        </RelativeLayout>
                        <TextView
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:id="@+id/tv_name"
                            android:text=""
                            android:layout_marginTop="12dp"
                            android:layout_toRightOf="@+id/rl_guanzhu"
                            android:layout_toLeftOf="@+id/iv_head"
                            android:textStyle="bold"
                            android:textColor="@color/black_101010"
                            android:textSize="14sp"
                            android:lines="1"
                            android:maxLength="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:layout_below="@+id/tv_name"
                            android:layout_toRightOf="@+id/rl_guanzhu"
                            android:layout_toLeftOf="@+id/iv_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_level"
                                android:layout_marginRight="1dp"
                                android:src="@mipmap/level_qingtong"
                                android:layout_width="22dp"
                                android:layout_height="22dp" />
                            <RelativeLayout
                                android:background="@drawable/bg_ffac27_10px"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_level"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black_101010"
                                    android:text=""
                                    android:lines="1"
                                    android:textSize="11sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>
                        </LinearLayout>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_marginTop="2dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/iv_head"
                            android:src="@mipmap/my_head"
                            android:layout_width="55dp"
                            android:layout_height="55dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="11dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_renwuqi"
                            android:src="@mipmap/renwuqi"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/tv_now_tatus"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="26dp"
                            android:layout_alignBottom="@+id/iv_renwuqi"
                            android:layout_toRightOf="@+id/iv_renwuqi"
                            android:textSize="14sp"
                            android:textColor="@color/black_101010"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_local"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/local_yellow_point"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />
                        <TextView
                            android:id="@+id/tv_address"
                            android:lines="1"
                            android:layout_toRightOf="@+id/iv_local"
                            android:layout_alignBottom="@+id/iv_local"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/black_101010"
                            android:layout_marginLeft="1dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_content"
                        android:ellipsize="end"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/black_101010"
                        android:lines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="1dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            test:radius1="5dp"
                            android:id="@+id/iv_small_1"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/zanwutupian"
                            android:layout_width="match_parent"
                            android:layout_height="80dp" />
                        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            test:radius1="5dp"
                            android:id="@+id/iv_small_2"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/zanwutupian"
                            android:layout_width="match_parent"
                            android:layout_height="80dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:id="@+id/ll_pinglun"
                android:orientation="vertical"
                android:layout_below="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_all_pinglun"
                        android:layout_centerVertical="true"
                        android:text="全部*条评论"
                        android:textColor="@color/red_d84c37"
                        android:textSize="12sp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/liulan_new" />

                        <TextView
                            android:id="@+id/tv_look_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxWidth="50dp"
                            android:text=""
                            android:textColor="#272A2C"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/ll_youji_comment"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:src="@mipmap/pinglun_new" />

                            <TextView
                                android:id="@+id/tv_pinglun_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxWidth="50dp"
                                android:text=""
                                android:textColor="#272A2C"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/ll_comment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ping_lun_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxWidth="60dp"
                        android:singleLine="true"
                        android:text="："
                        android:textColor="@color/black_101010"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_pinglun_content1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="85"
                        android:text=""
                        android:textColor="@color/black_101010"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:id="@+id/ll_comment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ping_lun_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:maxWidth="60dp"
                        android:singleLine="true"
                        android:text="："
                        android:textColor="@color/black_101010"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_pinglun_content2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="85"
                        android:text=""
                        android:textColor="@color/black_101010"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>
