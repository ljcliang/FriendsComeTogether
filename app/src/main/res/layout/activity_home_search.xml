<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_f6f6f6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newpage.HomeSearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/rl_r"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white_30px"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_ss"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/sousuo_red"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <EditText
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="text"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_ss"
                android:layout_marginRight="25dp"
                android:id="@+id/edt"
                android:textSize="14sp"
                android:hint="输入搜索内容"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_clear_edt"
                android:layout_alignParentRight="true"
                android:src="@mipmap/delete_round"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_r"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="visible"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black_101010"
                    android:text="取消"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_btn_search"
                android:visibility="gone"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/black_101010"
                android:text="搜索"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rl_btn_huodong"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_huodong"
                android:layout_centerInParent="true"
                android:text="行程活动"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v_huodong"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_d84c37_30px"
                android:layout_width="30dp"
                android:layout_height="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rl_btn_shangpin"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_shangpin"
                android:layout_centerInParent="true"
                android:text="铺子商品"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v_shangpin"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_d84c37_30px"
                android:layout_width="30dp"
                android:layout_height="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rl_btn_wenzhang"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_wenzhang"
                android:layout_centerInParent="true"
                android:text="友记文章"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/v_wenzhang"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_d84c37_30px"
                android:layout_width="30dp"
                android:layout_height="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/rl_btn_shipin"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_shipin"
                android:layout_centerInParent="true"
                android:text="友记视频"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="gone"
                android:id="@+id/v_shipin"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_d84c37_30px"
                android:layout_width="30dp"
                android:layout_height="2dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:textColor="@color/black_101010"
                    android:textSize="16sp"
                    android:text="最近搜索"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_btn_clear_zuijin"
                    android:textSize="14sp"
                    android:text="清除记录"
                    android:textColor="@color/black_666666"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_zuijin"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:textColor="@color/black_101010"
                    android:textSize="16sp"
                    android:text="大家都在搜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_hot"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:background="@color/color_f6f6f6"
            android:id="@+id/rl_search_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_list"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>