<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_editor_friend_remember_rv_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_below="@+id/activity_editor_friend_remember_rl_top"
        android:layout_margin="8dp"
        android:id="@+id/rl_modify"
        android:background="@drawable/bg_white_10dp"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/bg_ffac27_15dp_left"
            android:id="@+id/rl_right"
            android:layout_alignParentRight="true"
            android:ems="1"
            android:layout_marginTop="34dp"
            android:layout_width="20dp"
            android:layout_height="60dp">
            <TextView
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:text="续写"
                android:textColor="@color/white_ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/rl_iv"
            android:layout_toLeftOf="@+id/rl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="我是标题我是标题我题..."
                android:layout_marginLeft="10dp"
                android:id="@+id/activity_editor_friend_remember_rv_tv"
                android:textColor="@color/black_101010"
                android:textSize="16sp"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_fabu_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginRight="25dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/btn_shanchu"
                    android:layout_centerVertical="true"
                    android:text="删除"
                    android:textSize="13sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_666666_border_15dp"
                    android:layout_width="60dp"
                    android:layout_height="21dp"/>
                <TextView
                    android:id="@+id/btn_bianji"
                    android:layout_centerVertical="true"
                    android:text="编辑"
                    android:textSize="13sp"
                    android:textColor="@color/black_666666"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_666666_border_15dp"
                    android:layout_width="60dp"
                    android:layout_height="21dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_iv"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="87dp"
            android:layout_height="120dp">
            <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                android:id="@+id/iv"
                test:radius1="5dp"
                android:src="@mipmap/zanwutupian"
                android:scaleType="centerCrop"
                android:layout_width="87dp"
                android:layout_height="120dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
