<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_f6f6f6_down_8dp"
        android:translationZ="1px"
        android:id="@+id/ll_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="50px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5px"
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="30px"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ll_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="110px"
                        android:layout_marginLeft="20px"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="10px">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_alignParentTop="true"
                                        android:visibility="visible"
                                        android:id="@+id/v1"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/bg_d84c37_30px"
                                        android:layout_width="30px"
                                        android:layout_height="5px"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_alignParentTop="true"
                                        android:visibility="gone"
                                        android:id="@+id/v2"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/bg_d84c37_30px"
                                        android:layout_width="30px"
                                        android:layout_height="5px"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:id="@+id/rl_view_3"
                                    android:visibility="gone"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentTop="true"
                                        android:visibility="gone"
                                        android:id="@+id/v3"
                                        android:src="@drawable/bg_d84c37_30px"
                                        android:layout_width="30px"
                                        android:layout_height="5px"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/rl_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/ll_tab"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RelativeLayout
                                        android:id="@+id/rl1"
                                        android:layout_weight="1"
                                        android:layout_width="0px"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/tv_rl1"
                                            android:layout_centerInParent="true"
                                            android:textColor="@color/black_333333"
                                            android:textSize="58px"
                                            android:text="推荐"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />


                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rl2"
                                        android:layout_weight="1"
                                        android:layout_width="0px"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/tv_rl2"
                                            android:layout_centerInParent="true"
                                            android:textColor="#999999"
                                            android:textSize="50px"
                                            android:text="关注"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:visibility="gone"
                                        android:id="@+id/rl3"
                                        android:layout_weight="1"
                                        android:layout_width="0px"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:textColor="#999999"
                                            android:id="@+id/tv_rl3"
                                            android:layout_centerInParent="true"
                                            android:textSize="50px"
                                            android:text="友铺"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/ll_top_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_toLeftOf="@+id/ll_ll_search"
                        android:layout_marginLeft="30px"
                        android:padding="8px"
                        android:layout_marginRight="10px"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/locationRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="10px"
                                android:src="@mipmap/sanjiao_red"
                                android:layout_width="30px"
                                android:layout_height="30px" />
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:lines="1"
                                android:ellipsize="end"
                                android:layout_centerVertical="true"
                                android:id="@+id/tv_city_name"
                                android:textColor="@color/black_101010"
                                android:textSize="32px"
                                android:text="哈尔滨"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </RelativeLayout>
                    <!--tv_weiduxiaoxi-->
                    <LinearLayout
                        android:id="@+id/ll_ll_search"
                        android:layout_toLeftOf="@+id/rl_xiaoxi"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:id="@+id/ll_search"
                            android:layout_width="55px"
                            android:layout_height="55px"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/imageView2"
                                android:layout_width="40px"
                                android:layout_height="40px"
                                android:src="@mipmap/sousuo_red" />
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:id="@+id/rl_xiaoxi"
                        android:layout_marginRight="20px"
                        android:layout_alignParentRight="true"
                        android:layout_width="60px"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_margin="8px"
                                android:layout_centerVertical="true"
                                android:id="@+id/iv_msg"
                                android:src="@mipmap/message_red"
                                android:layout_width="40px"
                                android:layout_height="40px" />
                        </LinearLayout>
                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rl_xiaoxi_num"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bg_oval_red"
                            android:layout_width="30px"
                            android:layout_height="30px">
                            <TextView
                                android:id="@+id/tv_weiduxiaoxi"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white_F8F8F8"
                                android:text="1"
                                android:textSize="22px"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-20px"
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:visibility="visible"
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_ball"
        android:layout_marginBottom="200px"
        android:layout_alignParentRight="true"
        android:background="@mipmap/home_renwu"
        android:layout_alignParentBottom="true"
        android:layout_width="150px"
        android:layout_height="150px">
        <!--<TextView-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="32px"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:textColor="@color/white_ffffff"-->
            <!--android:text="任务"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </RelativeLayout>
</RelativeLayout>
