<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="33dp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/bg_white_5dp"
            android:elevation="5dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/bg_white_5dp"
        android:elevation="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="23dp"
        android:layout_width="108dp"
        android:layout_height="150dp">
        <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
            android:id="@+id/iv_big"
            android:src="@mipmap/zanwutupian"
            test:radius1="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/ll_name_info"
            android:layout_marginRight="20dp"
            android:id="@+id/rl_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:id="@+id/iv_guanzhu"
                android:src="@mipmap/hert_0324_g"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48dp"
            android:id="@+id/ll_name_info"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:id="@+id/tv_name"
                android:textSize="13sp"
                android:lines="1"
                android:maxLength="6"
                android:ellipsize="end"
                android:text="天水的铺"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/level_qingtong"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/rl_level"
                    android:layout_alignLeft="@+id/iv_icon"
                    android:layout_below="@+id/iv_icon"
                    android:background="@drawable/bg_ffac27_10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_101010"
                        android:text="Lv.1"
                        android:lines="1"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="61dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="125dp"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/luxian"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_101010"
                    android:text="巴厘岛七日休闲旅"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_time"
                android:textColor="#666666"
                android:text="03月01日 ~ 04月15日"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/youxiajiao"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="3dp"
        android:layout_marginTop="23dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:id="@+id/iv_head"
        android:src="@mipmap/my_head"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>
