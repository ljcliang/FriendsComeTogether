<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/iv_big"
        android:layout_alignBottom="@+id/iv_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:translationZ="2dp"
            android:elevation="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_white_5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        test:radius1="5dp"
        android:id="@+id/iv_big"
        android:layout_width="130dp"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/zanwutupian" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignBottom="@+id/iv_big"
        android:layout_alignTop="@+id/iv_big"
        android:layout_toRightOf="@+id/iv_big"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="9dp"
                android:layout_marginRight="11dp"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_head"
                android:src="@mipmap/my_head"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_marginTop="22.5dp"
                android:layout_marginRight="6dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_gravity="right"
                    android:textSize="14sp"
                    android:maxLength="5"
                    android:ellipsize="middle"
                    android:text="天水的铺子"
                    android:textColor="@color/black_101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_level"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/level_qingtong"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:id="@+id/rl_level"
                        android:layout_alignLeft="@+id/iv_icon"
                        android:layout_below="@+id/iv_icon"
                        android:background="@drawable/bg_ffac27_10px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black_101010"
                            android:text="Lv.1"
                            android:lines="1"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rl_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_guanzhu"
                    android:layout_margin="5dp"
                    android:src="@mipmap/hert_0324_g"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_goods"
            android:text="纯五常香米，政府背书5kg.."
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="@color/black_101010"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="11dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="bottom"
                android:textColor="@color/red_d84c37"
                android:textSize="12sp"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:textColor="@color/red_d84c37"
                android:text="89.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/ll_xingxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_star1"
                    android:src="@mipmap/pingxing"
                    android:layout_marginRight="2dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <ImageView
                    android:id="@+id/iv_star2"
                    android:src="@mipmap/pingxing"
                    android:layout_marginRight="2dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <ImageView
                    android:id="@+id/iv_star3"
                    android:src="@mipmap/pingxing"
                    android:layout_marginRight="2dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <ImageView
                    android:id="@+id/iv_star4"
                    android:src="@mipmap/pingxing"
                    android:layout_marginRight="2dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
                <ImageView
                    android:id="@+id/iv_star5"
                    android:src="@mipmap/pingxing"
                    android:layout_marginRight="2dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pinglun_num"
                android:layout_toRightOf="@+id/ll_xingxing"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:text="共0人评论"
                android:layout_width="match_parent"
                android:textColor="@color/black_101010"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
