<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiwo.friendscometogether.pages.EditorFriendRememberActivity">

    <RelativeLayout
        android:id="@+id/activity_editor_friend_remember_rl_top"
        style="@style/rl_top_bar_dp">

        <TextView
            android:id="@+id/tv_title"
            android:text="我的友记"
            style="@style/tv_top_title_dp" />
        
        <RelativeLayout
            android:id="@+id/activity_editor_friend_remember_rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return_dp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_complete"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white_ffffff"
                android:textSize="13sp"
                android:text="发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/activity_editor_friend_remember_rl_top"
        android:layout_above="@+id/activity_editor_friend_remember_tv_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_margin="8dp"
                android:id="@+id/rl_modify"
                android:background="@drawable/bg_white_10dp"
                android:elevation="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/bg_d84c37_15dp_left"
                    android:id="@+id/rl_right"
                    android:layout_alignParentRight="true"
                    android:ems="1"
                    android:layout_marginTop="34dp"
                    android:layout_width="20dp"
                    android:layout_height="60dp">
                    <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textSize="12sp"
                        android:text="主篇"
                        android:textColor="@color/white_ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/rl_iv"
                    android:layout_toLeftOf="@+id/rl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="我是标题我是标题我题..."
                        android:layout_marginLeft="10dp"
                        android:id="@+id/activity_editor_friend_remember_tv_title"
                        android:textColor="@color/black_101010"
                        android:textSize="16sp"
                        android:layout_marginRight="25dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_fabu_time"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginRight="25dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/activity_editor_friend_remember_tv_price"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginRight="25dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_xiangguanhuodong"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:layout_marginRight="25dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_marginTop="34dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:text="编辑"
                            android:textSize="13sp"
                            android:textColor="@color/black_666666"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bg_666666_border_15dp"
                            android:layout_width="60dp"
                            android:layout_height="21dp"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_iv"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="110dp"
                    android:layout_height="150dp">
                    <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                        android:id="@+id/activity_editor_friend_remember_iv_title"
                        test:radius1="5dp"
                        android:src="@mipmap/zanwutupian"
                        android:scaleType="centerCrop"
                        android:layout_width="110dp"
                        android:layout_height="150dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl_modify"
                android:id="@+id/activity_editor_friend_remember_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/activity_editor_friend_remember_tv_add"
        android:background="@color/red_d84c37"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white_ffffff"
        android:text="新增内容"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</RelativeLayout>
