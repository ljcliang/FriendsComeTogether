<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_1"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="7dp"
                    android:id="@+id/iv0"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/zanwutupian"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"/>
                <ImageView
                    android:layout_marginRight="7dp"
                    android:id="@+id/iv1"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/zanwutupian"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/zanwutupian"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_2"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="6dp"
                android:id="@+id/tv_title2"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="102dp"/>
            <LinearLayout
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="102dp">
                <ImageView
                    android:id="@+id/iv2_0"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/zanwutupian"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_3"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title3"
                android:textSize="14sp"
                android:textColor="@color/black_101010"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv3_0"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/zanwutupian"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="2020年7月15日"
                android:id="@+id/tv_date"
                android:textSize="12sp"
                android:textColor="@color/black_101010"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/liulan_new"
                    android:id="@+id/iv_look_num"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/black_101010"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:id="@+id/tv_look_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/pinglun_new"
                    android:id="@+id/iv_pinlun_num"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/black_101010"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_pinglun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>
