<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.netease.vcloud.video.render.NeteaseView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/live_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="20dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/live_capture_btn"
            android:layout_width="90px"
            android:layout_height="70px"
            android:src="@mipmap/take_videos_capture"/>

        <ImageView
            android:id="@+id/live_flash_btn"
            android:layout_width="90px"
            android:layout_height="70px"
            android:src="@mipmap/take_videos_flash"/>

        <ImageView
            android:id="@+id/live_filter_btn"
            android:layout_width="90px"
            android:layout_height="70px"
            android:src="@mipmap/take_videos_filter"/>

        <ImageView
            android:id="@+id/live_music_btn"
            android:layout_width="90px"
            android:layout_height="70px"
            android:src="@mipmap/take_videos_music"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <ImageView
            android:layout_marginLeft="80px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/live_camera_btn"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/take_videos_camera"/>
        <ImageView
            android:src="@mipmap/take_videos_restart"
            android:id="@+id/live_start_btn"
            android:layout_marginBottom="100px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
