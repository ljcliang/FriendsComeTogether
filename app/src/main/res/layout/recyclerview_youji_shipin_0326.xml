<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_alignTop="@+id/ll_top"
        android:layout_alignBottom="@+id/ll_bottom"
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_white_5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_top"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="37dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/iv_head"
                    android:src="@mipmap/my_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:id="@+id/ll_name_info"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/tv_name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:text="天水的铺铺铺铺子"
                        android:textColor="@color/black_101010"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_gravity="center_vertical"
                            android:id="@+id/rl_level"
                            android:layout_alignLeft="@+id/iv_icon"
                            android:layout_below="@+id/iv_icon"
                            android:background="@drawable/bg_ffac27_10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_level"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black_101010"
                                android:text="Lv.1"
                                android:lines="1"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/iv_level"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/level_qingtong"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_toRightOf="@+id/ll_name_info"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/rl_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_guanzhu"
                        android:src="@mipmap/hert_0324_g"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_address"
                    android:lines="1"
                    android:layout_toRightOf="@+id/iv_local"
                    android:layout_alignBottom="@+id/iv_local"
                    android:layout_gravity="bottom"
                    android:text="印尼巴厘岛"
                    android:textSize="12sp"
                    android:textColor="@color/black_101010"
                    android:layout_marginRight="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_local"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/local_yellow_point"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </LinearLayout>
            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:text="巴兰海滩，乌鲁瓦图情人崖，海龟岛刻录机布皇宫海结受到法律上的风..."
                android:textSize="16sp"
                android:textColor="@color/black_101010"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    test:radius1="5dp"
                    android:id="@+id/iv_small_1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/picnull"
                    android:layout_width="match_parent"
                    android:layout_height="58dp" />
                <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    test:radius1="5dp"
                    android:id="@+id/iv_small_2"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/picnull"
                    android:layout_width="match_parent"
                    android:layout_height="58dp" />
                <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                    android:layout_weight="1"
                    test:radius1="5dp"
                    android:id="@+id/iv_small_3"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/picnull"
                    android:layout_width="match_parent"
                    android:layout_height="58dp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:elevation="1dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_white_5dp"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.yiwo.friendscometogether.widget.CustomRoundAngleImageView
                android:id="@+id/iv_big"
                android:src="@mipmap/zanwutupian"
                test:radius1="5dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_play"
                android:src="@mipmap/play"
                android:layout_centerInParent="true"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_bottom"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ll_pinglun_see"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_xiangguan_huodong"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/guanlian"
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/tv_huodong"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:textSize="13sp"
                        android:text="巴厘岛七日休闲旅"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:id="@+id/ll_canyuxiezuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_canyu1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/my_head"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_canyu2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/my_head"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_canyu3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/my_head"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_canyu4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/my_head"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_canyu5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/my_head"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_canyu"
                        android:text="···25人参与写作"
                        android:textColor="#666666"
                        android:layout_gravity="center_vertical"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_weight="1.5"
                android:id="@+id/ll_pinglun_see"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/liulan_new" />

                <TextView
                    android:id="@+id/tv_look_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="50dp"
                    android:text="0"
                    android:textColor="#272A2C"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_youji_comment"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/pinglun_new" />

                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="50dp"
                        android:text="0"
                        android:textColor="#272A2C"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="18dp"
            android:id="@+id/ll_pinlun"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_pinglun_num"
                android:layout_centerVertical="true"
                android:text="全部*条评论"
                android:textColor="@color/red_d84c37"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ll_comment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_pinglun_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="塞北的雪："
                    android:textColor="@color/black_101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_pinglun_comment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="85"
                    android:text="主要是人美！"
                    android:textColor="@color/black_101010"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:id="@+id/ll_comment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_pinglun_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="雪山飞狐："
                    android:textColor="@color/black_101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_pinglun_comment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="85"
                    android:text="地方不错，有时间的去一趟！"
                    android:textColor="@color/black_101010"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
