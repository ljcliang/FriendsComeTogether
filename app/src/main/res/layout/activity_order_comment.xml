<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiwo.friendscometogether.pages.OrderCommentActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <TextView
            android:text="评价"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:id="@+id/activity_order_comment_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/activity_order_comment_rl_complete"
            android:layout_alignParentRight="true"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textSize="30px"
                android:textColor="@color/white_ffffff"
                android:text="发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78px">

        <TextView
            android:id="@+id/activity_order_comment_tv_title"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="30px"
            android:text="云南旅游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="210px">

        <ImageView
            android:id="@+id/activity_order_comment_iv_title"
            android:scaleType="fitXY"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:layout_width="262px"
            android:layout_height="170px" />
        <LinearLayout
            android:layout_alignTop="@+id/activity_order_comment_iv_title"
            android:layout_marginLeft="20px"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/activity_order_comment_iv_title"
            android:layout_width="wrap_content"
            android:layout_height="170px">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_start_time"
                android:textColor="#333333"
                android:textSize="24px"
                android:text="开始时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_end_time"
                android:textColor="#333333"
                android:textSize="24px"
                android:text="结束时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="24px"
                android:id="@+id/tv_people_num"
                android:text="参加人数："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="24px"
                android:id="@+id/tv_noname"
                android:text="是否匿名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:id="@+id/activity_order_comment_tv_price_details"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:text="自费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_order_comment_tv_price"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/red_d84c37"
            android:textSize="28px"
            android:text="合计费用：¥8888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    
    <EditText
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:gravity="start"
        android:textSize="28px"
        android:hint="分享一下活动的感受吧..."
        android:id="@+id/activity_order_comment_et_content"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="300px" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_btn_delete"
        android:layout_marginTop="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="3px"
        android:paddingBottom="3px"
        android:textColor="@color/white_ffffff"
        android:text="删除"
        android:background="@drawable/bg_red_10px"
        android:textSize="28px"
        android:layout_gravity="right"
        android:layout_marginRight="80px"
        android:layout_width="100px"
        android:gravity="center"
        android:layout_height="50px" />
</LinearLayout>
